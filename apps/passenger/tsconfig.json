{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@screens/*": [
                "./src/screens/*"
            ],
            "@hooks/*": [
                "./src/hooks/*"
            ],
            "@stores/*": [
                "./src/stores/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@constants/*": [
                "./src/constants/*"
            ],
            "@assets/*": [
                "./assets/*"
            ],
            "@transigo/shared": [
                "../../packages/shared/src/index.ts"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ]
}